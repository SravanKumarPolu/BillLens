{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": []
  },
  "include": ["src/**/*", "index.ts", "index.tsx"],
  "exclude": ["node_modules", "**/node_modules"]
}
